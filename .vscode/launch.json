    "version": "0.2.0",
    "configurations": [
        {
            "name": "yarn start:dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:dev"],
            "port": 9229,
            "stopOnEntry": true
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "port": 9229,
            "restart": { "delay": 0, "maxAttempts": 3 }
        }
    ]
}
